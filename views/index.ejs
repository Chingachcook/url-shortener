<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
    <title>Url shortener</title>
</head>
<body class="text-center">
    <div class="container mt-4">
        <h1>URL Shrinker</h1>
        <form action="/shortUrls" method="POST" class="my-4 form-inline url-shortener">
            <label for="fullUrl" class="sr-only">URL</label>
            <input type="url" name="fullUrl" id="fullUrl" placeholder="Shorten your link" required class="form-control mr-2 mb-1 url-shortener__input">
            <button type="submit" class="btn btn-success mb-1 url-shortener__btn">Shorten</button>
        </form>

        <table class="table table-striped table-responsive table-dark urls-table">
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr class="d-flex">
                        <td class="d-inline-block col-7">
                            <a target="_blank" href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
                        </td>
                        <td class="d-inline-block col-3">
                            <a id="fieldToCopy" target="_blank" href="<%= shortUrl.short %>" class="urls-table__link"><%= shortUrl.short %></a>
                        </td>
                        <td class="d-inline-block col-2">
                            <button class="btn btn-primary btn-copy" data-clipboard-text="<%= shortUrl.short %>">Copy</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.4/clipboard.min.js"></script>
<script src="/js/utils/copyHelper.js"></script>
</html>
